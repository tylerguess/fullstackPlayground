<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" value="<% if (editing) { %><%= product.title %><% } else { %><% } %>" id="title">
            </div>
            <div class="form-control">
                <label for="imageURL">Image URL</label>
                <input type="text" name="imageURL" value="<% if (editing) { %><%= product.imageURL %><% } else { %><% } %>" id="imageURL">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" value="<% if (editing) { %><%= product.price %><% } else { %><% } %>" id="price" step="0.01">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description", rows="5"><% if (editing) { %><%= product.description %><% } else { %><% } %></textarea>
            </div>
            <% if (editing) { %> 
                <input type="hidden" value="<%= product.id %>"" name="productID">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>